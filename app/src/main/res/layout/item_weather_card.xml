<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/weather_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:elevation="8dp"
    android:backgroundTint="@color/surface"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/weather_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your next trip to Paris, Rome, Berlin"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="4sp"
            android:autoSizeMaxTextSize="18sp"
            android:autoSizeStepGranularity="1sp"
            android:textColor="@color/primary"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                    android:layout_width="168dp"
                    android:layout_height="104dp"
                    android:elevation="12dp"
                    app:cardCornerRadius="12dp"
                    android:backgroundTint="@color/tertiary"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="Weather Forecast"
                        android:textColor="@color/onTertiary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_weather"
                        android:drawablePadding="2dp"
                        android:drawableTint="@color/onTertiary"/>

                    <TextView
                        android:id="@+id/weather_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:text="25Â°C"

                        android:textColor="@color/onTertiary"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="168dp"
                    android:layout_height="104dp"
                    android:elevation="1dp"
                    app:cardCornerRadius="12dp"
                    android:backgroundTint="@color/primary"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Don't forget:"
                            android:textStyle="bold"
                            android:textColor="@color/surface"
                            android:textSize="14sp"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:id="@+id/reminder_item_documents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Documents"
                            android:textColor="@color/surface"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:paddingTop="0dp"
                            android:drawableStart="@drawable/ic_documents"
                            android:drawablePadding="3dp"
                            android:drawableTint="@color/surface" />

                        <TextView
                            android:id="@+id/reminder_item_charger"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Charger"
                            android:textColor="@color/surface"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:paddingTop="0dp"
                            android:drawableStart="@drawable/ic_charger"
                            android:drawablePadding="3dp"
                            android:drawableTint="@color/surface" />

                        <TextView
                            android:id="@+id/reminder_item_weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dress for the weather"
                            android:textColor="@color/surface"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:paddingTop="0dp"
                            android:drawableStart="@drawable/ic_clothes"
                            android:drawablePadding="3dp"
                            android:drawableTint="@color/surface" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/packing_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Packing completed: 0%"
            android:textSize="12sp"
            android:textColor="@color/onSurface"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="4dp" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/packing_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:indeterminate="false"
            android:progress="0"
            android:max="100"
            android:visibility="gone"
            app:trackCornerRadius="8dp"
            app:indicatorColor="@color/primary"
            app:trackColor="@color/background" />



    </LinearLayout>
</androidx.cardview.widget.CardView>
