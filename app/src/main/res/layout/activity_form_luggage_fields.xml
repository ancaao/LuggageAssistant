<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/surface"
    android:padding="16dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:elevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/removeLuggageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove luggage"
            android:backgroundTint="@color/error"
            android:textColor="@color/onPrimary" />

        <!-- Owner(s) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner(s) *"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/onBackground"
            android:paddingTop="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ownerSelectedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select owner(s)"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/inputText"
            app:cornerRadius="24dp"
            android:strokeWidth="1"
            android:strokeColor="@color/inputBorder"
            android:insetTop="8dp"
            android:insetBottom="8dp"
            android:insetLeft="12dp"
            android:insetRight="12dp" />
        <TextView
            android:id="@+id/extraLuggageSelectOwnersErrorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/error"
            android:textSize="12sp"
            android:visibility="gone"
            android:paddingTop="4dp"/>


        <!-- Luggage Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luggage Type *"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/onBackground"
            android:paddingTop="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/luggageTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luggage type"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/inputText"
            app:cornerRadius="24dp"
            android:strokeWidth="1"
            android:strokeColor="@color/inputBorder"
            android:insetTop="8dp"
            android:insetBottom="8dp"
            android:insetLeft="12dp"
            android:insetRight="12dp" />
        <TextView
            android:id="@+id/extraLuggageLuggageTypeErrorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/error"
            android:textSize="12sp"
            android:visibility="gone"
            android:paddingTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:weightSum="2">
            <!-- Length -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:errorEnabled="true"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lengthInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:hint="Length (cm)"
                    android:inputType="number"
                    android:textColor="@color/inputText" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Width -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:errorEnabled="true"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/widthInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Width (cm)"
                    android:backgroundTint="@color/white"
                    android:inputType="number"
                    android:textColor="@color/inputText" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp"
            android:weightSum="2">
            <!-- Height -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:errorEnabled="true"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/heightInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Height (cm)"
                    android:backgroundTint="@color/white"
                    android:inputType="number"
                    android:textColor="@color/inputText" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Weight -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:errorEnabled="true"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/weightInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Weight (kg)"
                    android:backgroundTint="@color/white"
                    android:inputType="numberDecimal"
                    android:textColor="@color/inputText" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Accessories -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/accessoriesSelectedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Select accessories"
            android:backgroundTint="@color/primary"
            android:textColor="@color/surface"
            app:cornerRadius="24dp"
            android:strokeWidth="1"
            android:strokeColor="@color/inputBorder"
            android:insetTop="8dp"
            android:insetBottom="8dp"
            android:insetLeft="12dp"
            android:insetRight="12dp" />

        <TextView
            android:id="@+id/accessoriesSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No accessories selected"
            android:textColor="@color/onBackground"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
