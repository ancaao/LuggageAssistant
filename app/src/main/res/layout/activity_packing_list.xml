<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/packingListLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="0dp">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:tabIndicatorColor="@color/linkColor"
        app:tabTextColor="@color/onBackground"
        app:tabSelectedTextColor="@color/linkColor"
        app:tabIndicatorHeight="4dp"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="4dp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:overScrollMode="never" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save selected items to your packing list"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:visibility="gone"
        android:backgroundTint="@color/linkColor"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="16dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:lottie_fileName="loop_airplane.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Generating packing list..."
            android:textSize="16sp"
            android:textColor="@color/onBackground"
            android:gravity="center"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/tryAgainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try again"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/secondary"
            android:textColor="@color/onSecondary"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>


