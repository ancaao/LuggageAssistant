<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp"
        app:errorEnabled="true" >

        <!-- Owner(s) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner(s)"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/onBackground"
            android:paddingTop="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectOwnersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Select owner(s)"
            android:backgroundTint="@color/surface"
            android:textColor="@color/inputText"
            android:iconTint="@color/inputText"
            android:strokeWidth="1"
            android:strokeColor="@color/inputBorder"
            app:cornerRadius="24dp"
            android:insetTop="8dp"
            android:insetBottom="8dp"
            android:insetLeft="12dp"
            android:insetRight="12dp" />
        <TextView
            android:id="@+id/selectOwnersErrorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error"
            android:text=""
            android:textSize="12sp"
            android:visibility="gone"
            android:paddingTop="4dp"/>

        <!-- Luggage Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luggage Type"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:paddingTop="16dp"
            android:textColor="@color/onBackground" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/luggageTypeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luggage type"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/surface"
            android:textColor="@color/inputText"
            app:cornerRadius="24dp"
            android:iconTint="@color/inputText"
            android:insetTop="8dp"
            android:insetBottom="8dp"
            android:insetLeft="12dp"
            android:insetRight="12dp" />
        <TextView
            android:id="@+id/luggageTypeErrorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error"
            android:text=""
            android:textSize="12sp"
            android:visibility="gone"
            android:paddingTop="4dp"/>

        <!-- Length -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:errorEnabled="true"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lengthInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Length (cm)"
                android:inputType="number"
                android:textColor="@color/inputText" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Width -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:errorEnabled="true"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/widthInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Width (cm)"
                android:inputType="number"
                android:textColor="@color/inputText" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Height -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:errorEnabled="true"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/heightInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Height (cm)"
                android:inputType="number"
                android:textColor="@color/inputText" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Weight -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:errorEnabled="true"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/weightInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Weight (kg)"
                android:inputType="numberDecimal"
                android:textColor="@color/inputText" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Accessories -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectSpecialAccessoriesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Select Special Accessories"
            android:backgroundTint="@color/primary"
            android:textColor="@color/onPrimary" />

        <TextView
            android:id="@+id/accessoriesSelectedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No accessories selected"
            android:textColor="@color/onBackground"
            android:paddingTop="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

        <!-- Luggage container -->
        <LinearLayout
            android:id="@+id/luggageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Add luggage button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addLuggageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_another_luggage"
            android:backgroundTint="@color/primary"
            android:textColor="@color/onPrimary"
            android:layout_marginVertical="12dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_horizontal"
            app:cornerRadius="24dp" />


        <!-- Navigation buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/stepTwoBackButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/surface"
                android:textColor="@color/onPrimary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/stepTwoNextButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/success"
                android:textColor="@color/onPrimary" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
